<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/theatreCard_theatreId_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="theatreId:   "
        android:textSize="26sp"/>


    <TextView
        android:id="@+id/theatreCard_theatreId"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/theatreCard_theatreId_text"


        android:layout_alignParentBottom="false"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/theatreCard_theatreName_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/theatre_name"
        android:textSize="26sp"

    />


    <TextView
        android:id="@+id/theatreCard_theatreName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"


        />

    <TextView
        android:id="@+id/theatreCard_theatreLocation_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/theatre_location"
        android:textSize="26sp"/>

    <TextView
        android:id="@+id/theatreCard_theatreLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"

        />

</LinearLayout>