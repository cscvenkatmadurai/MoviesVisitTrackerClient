<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edit_text_add_movie_visit_imdbId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_mono_thin"
        android:hint="imdbId" />

    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="type movie name"
        android:id="@+id/autocomplete_movie_name"
        />

    <EditText
        android:id="@+id/edit_text_theatreId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="theatreId"/>

    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="type theatre name"
        android:id="@+id/autocomplete_theatre_name"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select date"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:id="@+id/button_add_date"/>
    <EditText
        android:id="@+id/edit_text_rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:hint="your rating"
        />

    <EditText
        android:id="@+id/edit_text_lang_watched"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="langauge watched"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_add_movie_visit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/roboto_medium"
        android:text="Add movie visit"
        android:textStyle="bold" />





</LinearLayout>